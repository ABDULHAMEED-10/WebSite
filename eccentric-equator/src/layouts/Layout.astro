---
interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Professional taxi service in Leicester - Aylestone Taxis provides reliable local and nationwide transport services."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="index, follow" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/fonts/proxima-nova.css" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-brand-light text-brand-slate">
    <slot />
  </body>
</html>